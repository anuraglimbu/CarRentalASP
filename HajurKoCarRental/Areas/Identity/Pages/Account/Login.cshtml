@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-3 mb-4">
    <div class="col-lg-5 col-md-8 col-sm-10 col-xs-12">
        <div class="card rounded-0 shadow">
            <div class="card-header">
                <div class="card-title text-center h4 fw-bolder">@ViewData["Title"]</div>
            </div>
            <div class="card-body">
                <div class="container-fluid">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-0 pb-0"></div>
                    <form class="form-horizontal" id="account" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                            <label asp-for="Input.Email" class="form-label"></label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating  mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="mb-2 justify-content-center">
                            <div class="form-check form-switch mb-3">
                                <input class="form-check-input cursor-pointer" type="checkbox" asp-for="Input.RememberMe" role="switch">
                                <label class="form-check-label" asp-for="Input.RememberMe">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </div>
                        </div>
                        <div class="mb-3 d-grid">
                            <button id="login-submit" type="submit" class="w-100 form-control btn btn-lg btn-primary">Log in</button>
                        </div>

                        <div class="mb-3 d-grid justify-content-center">
                            <p class="w-100">
                                <a id="forgot-password" class="text-center text-decoration-none" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>
                            <p class="w-100 justify-content-center text-center">
                                <a id="forgot-password" class="text-center text-decoration-none" asp-area="" asp-controller="Users" asp-action="Signup">Create an account</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

